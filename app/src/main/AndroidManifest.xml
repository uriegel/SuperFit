<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uriegel.superfit">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".android.Application"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperFit"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.EventLogActivity"
            android:exported="true" />
        <activity
            android:name=".ui.TrackingActivity"
            android:exported="true"
            android:theme="@style/Theme.SuperFit.Map" />
        <activity
            android:name=".ui.TrackActivity"
            android:exported="true"
            android:theme="@style/Theme.SuperFit.Map" />
        <activity
            android:name=".ui.SensorDevicesActivity"
            android:exported="true" />
        <activity
            android:name=".ui.DisplayActivity"
            android:exported="true"
            android:theme="@style/Theme.SuperFit.Display" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SuperFit.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PreferenceActivity" />

        <service android:name=".android.Service" />
    </application>

</manifest>